<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--标题作者-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fg_poem_title"
            style="@style/poetry_title"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/fg_poem_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fg_poem_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/fg_poem_title"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_poem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/fg_poem_content"
        style="@style/poem_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"/>

</LinearLayout>