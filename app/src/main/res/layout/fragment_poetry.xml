<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--标题作者-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fg_poetry_title"
            style="@style/poetry_title"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/fg_poetry_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fg_poetry_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/fg_poetry_title"
            android:textSize="14sp" />

    </RelativeLayout>

    <!--内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <com.hanks.htextview.fade.FadeTextView
            android:id="@+id/fg_poetry_content_1"
            style="@style/poetry_content_fade" />

        <com.hanks.htextview.fade.FadeTextView
            android:id="@+id/fg_poetry_content_2"
            style="@style/poetry_content_fade"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp" />

        <com.hanks.htextview.fade.FadeTextView
            android:id="@+id/fg_poetry_content_3"
            style="@style/poetry_content_fade"
            android:layout_marginStart="30dp" />

        <com.hanks.htextview.fade.FadeTextView
            android:id="@+id/fg_poetry_content_4"
            style="@style/poetry_content_fade"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_poetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"/>

</FrameLayout>