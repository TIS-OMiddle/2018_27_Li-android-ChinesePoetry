<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--穿透状态栏主题-->
    <style name="TransTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--登陆显示，字体-->
    <style name="UserID">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--返回按钮，字体-->
    <style name="bt_back">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">←</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:left">5dp</item>
        <item name="android:bottom">10dp</item>
    </style>

    <!--工具栏，标题字体-->
    <style name="tv_toolbar_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--唐诗，标题字体-->
    <style name="poetry_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--唐诗，内容字体-->
    <style name="poetry_content_fade" parent="poetry_title">
        <item name="android:ems">1</item>
        <item name="animationDuration">1500</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <!--宋词，内容字体-->
    <style name="poem_content" parent="poetry_title">
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <!--主页，冒泡球-->
    <style name="main_frame_grav_ball">
        <item name="colorGenerator">
            com.github.glomadrian.grav.generator.paint.OneColorGenerator
        </item>
        <item name="single_color">@color/my_gray_ball</item>
        <item name="animationGenerators">@array/BubbleAnimations</item>
        <item name="ball_from_size">10dp</item>
        <item name="ball_to_size">20dp</item>
        <item name="gravGenerator">com.github.glomadrian.grav.generator.grav.BallGenerator</item>
        <item name="pointGenerator">
            com.github.glomadrian.grav.generator.point.RegularPointGenerator
        </item>
        <item name="regular_cell_size">300</item>
        <item name="regular_variance">200</item>
        <item name="shake_direction">vertical</item>
        <item name="shake_max_duration">20000</item>
        <item name="shake_min_duration">10000</item>
        <item name="shake_variance">500dp</item>
        <item name="side_to_side_direction">leftToRight</item>
        <item name="side_to_side_max_duration">10000</item>
        <item name="side_to_side_min_duration">10000</item>

    </style>


</resources>
